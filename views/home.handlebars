{{!-- Home --}}
{{#if products.length}}
<div class="grid">
  {{#each products}}
    <article class="card">
      <img src="{{imageUrl}}" alt="{{title}}" class="thumb" />
      <div class="card-body">
        <h3>{{title}}</h3>
        <p class="muted">{{team}} — {{category}}</p>
        <p>${{price}}</p>
      </div>
    </article>
  {{/each}}
</div>
{{else}}
  <p>No hay productos aún. Ejecutá <code>npm run seed</code> para importar productos de ejemplo.</p>
{{/if}}
